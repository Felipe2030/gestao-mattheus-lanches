<!-- Add Venda Modal -->
<div id="addVendaModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal('addVendaModal')">&times;</span>
        <h2 class="text-xl font-semibold mb-4">Registrar Venda</h2>
        <form id="vendaForm" onsubmit="event.preventDefault(); saveVenda();">
            <div class="mb-4">
                <label for="vendaData" class="block text-sm font-medium text-gray-700 mb-1">Data</label>
                <input type="date" id="vendaData" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>
            <div class="mb-4">
                <label for="vendaProduto" class="block text-sm font-medium text-gray-700 mb-1">Produto</label>
                <select id="vendaProduto" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
                    <!-- Produtos will be loaded here -->
                </select>
            </div>
            <div class="mb-4">
                <label for="vendaQuantidade" class="block text-sm font-medium text-gray-700 mb-1">Quantidade</label>
                <input type="number" id="vendaQuantidade" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>
            <div class="mb-4">
                <label for="vendaPrecoUnitario" class="block text-sm font-medium text-gray-700 mb-1">Preço Unitário (R$)</label>
                <input type="number" step="0.01" id="vendaPrecoUnitario" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Total (R$)</label>
                <input type="number" step="0.01" id="vendaTotal" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Lucro (R$)</label>
                <input type="number" step="0.01" id="vendaLucro" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
            </div>
            <div class="flex justify-end space-x-2">
                <button type="button" class="px-4 py-2 bg-gray-300 rounded-md" onclick="closeModal('addVendaModal')">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md">Registrar</button>
            </div>
        </form>
    </div>
</div>