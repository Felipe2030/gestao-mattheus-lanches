 <!-- Relatórios Tab -->
<div id="relatorios" class="tab-content">
    <h2 class="text-2xl font-semibold mb-4">Relatórios</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4 text-blue-600">Resumo Financeiro</h3>
            <div class="space-y-2">
                <p><span class="font-medium">Total de Vendas:</span> <span id="totalVendas" class="text-green-600">R$ 0,00</span></p>
                <p><span class="font-medium">Total de Custos:</span> <span id="totalCustos" class="text-red-600">R$ 0,00</span></p>
                <p><span class="font-medium">Total de Lucro:</span> <span id="totalLucro" class="text-green-600 font-bold">R$ 0,00</span></p>
            </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-4 text-blue-600">Produto Mais Vendido</h3>
            <div id="produtoMaisVendido">
                <p>Nenhuma venda registrada ainda.</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-4 text-blue-600">Estoque Atual</h3>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mercadoria</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estoque</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unidade</th>
                </tr>
            </thead>
            <tbody id="estoqueTableBody" class="bg-white divide-y divide-gray-200">
                <!-- Estoque will be loaded here -->
            </tbody>
        </table>
    </div>
    
    <div class="mt-6 flex justify-end">
        <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg" onclick="exportarDados()">
            <i class="fas fa-file-export mr-2"></i>Exportar Dados
        </button>
    </div>
</div>
</div>