 <!-- Add Produto Modal -->
<div id="addProdutoModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal('addProdutoModal')">&times;</span>
        <h2 class="text-xl font-semibold mb-4">Adicionar Produto</h2>
        <form id="produtoForm" onsubmit="event.preventDefault(); saveProduto();">
            <div class="mb-4">
                <label for="produtoNome" class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
                <input type="text" id="produtoNome" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Ingredientes</label>
                <div id="ingredientesContainer" class="space-y-2">
                    <!-- Ingredientes will be added here -->
                </div>
                <button type="button" class="mt-2 px-3 py-1 bg-gray-200 rounded-md text-sm" onclick="addIngredienteField()">
                    <i class="fas fa-plus mr-1"></i>Adicionar Ingrediente
                </button>
            </div>
            
            <div class="mb-4">
                <label for="produtoPreco" class="block text-sm font-medium text-gray-700 mb-1">Preço de Venda (R$)</label>
                <input type="number" step="0.01" id="produtoPreco" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Custo de Produção (R$)</label>
                <input type="number" step="0.01" id="produtoCusto" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
            </div>
            
            <input type="hidden" id="produtoId">
            <div class="flex justify-end space-x-2">
                <button type="button" class="px-4 py-2 bg-gray-300 rounded-md" onclick="closeModal('addProdutoModal')">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md">Salvar</button>
            </div>
        </form>
    </div>
</div>